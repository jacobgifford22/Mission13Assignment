@{
    ViewData["Title"] = "Bowlers - Bowling League";
}

@model List<Bowler>

@if (ViewBag.Team == null)
{
    <h1>Bowlers on All Teams</h1>
}
else
{
    <h1>Bowlers on Team @ViewBag.Team</h1>
}

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>BowlerID</td>
            <td>First Name</td>
            <td>Middle Init.</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerID</td>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>

                <td><a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
