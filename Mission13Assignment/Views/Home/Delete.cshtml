@{
    ViewData["Title"] = "Delete Bowler";
}

@model Bowler

<div class="text-center">
    <h1 class="display-4">Confirm Deletion</h1>
    <h3>Are you sure you want to delete @Model.BowlerFirstName @Model.BowlerLastName?</h3>

    <form method="post" asp-controller="Home" asp-action="Delete">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        <button type="submit" class="btn btn-outline-secondary">Delete</button>

        <input type="hidden" asp-for="BowlerID" />
    </form>
</div>